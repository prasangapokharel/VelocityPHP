{
    "name": "velocityphp/framework",
    "description": "Ultra-fast, production-ready PHP framework with modern architecture",
    "type": "project",
    "keywords": ["php", "framework", "velocityphp", "fast", "performance", "mvc"],
    "license": "MIT",
    "version": "1.0.0",
    "authors": [
        {
            "name": "VelocityPhp Team"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "suggest": {
        "ext-opcache": "For optimal performance",
        "ext-apcu": "For enhanced caching"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "classmap-authoritative": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "7.4"
        }
    },
    "scripts": {
        "start": "php start.php",
        "serve": "php -S localhost:8000 -t public",
        "test": "phpunit",
        "post-install-cmd": [
            "@php -r \"!file_exists('.env') && copy('.env.example', '.env');\""
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
